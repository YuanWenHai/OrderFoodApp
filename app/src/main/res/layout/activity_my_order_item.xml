<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_cart_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_toRightOf="@+id/user_cart_item_image"
            android:layout_toEndOf="@+id/user_cart_item_image"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/user_cart_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="标题"/>
            <TextView
                android:id="@+id/user_cart_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_cart_item_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                tools:text="X5"/>
            <TextView
                android:id="@+id/user_cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_cart_item_title"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                tools:text="¥125"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>