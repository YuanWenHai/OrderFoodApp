<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_item_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_black"
            android:text="@string/my_order"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/order_item_state"
            android:layout_toStartOf="@+id/order_item_state" />
        <TextView
            android:id="@+id/order_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2016/4/25 14:02"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/grey_black"
            android:layout_below="@+id/order_item_state"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/order_item_state"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/grey_black"
            android:layout_height="wrap_content"
            tools:text="已完成"/>
        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="共计：85元"
            android:layout_margin="10dp"
            android:layout_below="@+id/order_item_state"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>